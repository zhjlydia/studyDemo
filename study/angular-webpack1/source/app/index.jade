doctype html
//- ng-app is determined by build script
html(lang="en", ng-app= htmlWebpackPlugin.options.appName, ng-strict-di, ng-class="::ieClass")
    head
        //- This helps the ng-show/ng-hide animations start at the right place.
        //- Since Angular has this but needs to load, this gives us the class early.
        style
            .ng-hide { display: none!important; }
        title(ng-bind="title")
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no")
        base(href="/")
        //- babel polyfill for IE
        //- conditional comment is not supported from IE 10
        //- TODO: how to include this only for IE
        script(src="polyfill.js")

    body(ng-class="_class + '-page'")
        .wrapper(ui-view)

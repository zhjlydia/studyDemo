@import '../_common/styles/common'

.square-menu-view.boxes
    margin-top 20px
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    +sm()
        flex-direction column
    .box
        display block
        text-decoration none
        padding 10px 20px
        border-radius 2px
        text-shadow 0 0 2px #eee
        margin 20px
        width 200px
        height 150px
        &:hover
            box-shadow 2px 2px rgba(132, 143, 203, 0.4)
        .count
            display inline-block
            float right
            font-size 2rem
            margin-top 15px
        .name
            margin-top 10px
            font-weight bold
            text-transform uppercase
            margin-left 10px

@import '../_common/styles/common'

.phone-form-view
    .form
        display flex
        flex-flow row wrap
        +sm()
            flex-direction column
        .form-group
            flex 1 1 auto
            margin 16px
            .form-item
                padding 8px
                border-bottom 1px dashed rgba(0, 0, 0, 0.12)
                .form-label
                    display flex
                    span
                        flex 1 1 auto
                    .form-value
                        +sm()
                            text-align right
                .form-field
                    position relative
                    display none
                    .error-message
                        &.ng-inactive
                            display none
                        &.ng-active
                            display block
                        border-radius 3px
                        background-color rgba(0,0,0,.1)
                        padding 5px
                        position absolute
                        right 0
                        bottom 45px
                        z-index 1
                        &:after
                            content ''
                            border 7px solid transparent
                            border-top-color rgba(0,0,0,0.1)
                            position absolute
                            right 2px
                            margin-top 5px
                    .form-control
                        flex 1 1 auto
                        .datepicker
                            cursor pointer
                        .dropdown-content
                            width 100%
                    .error-icon
                        position absolute
                        bottom 15px
                        right 0

        .actions
            display none
            border-top 1px solid rgba(0, 0, 0, 0.12)
            flex 1 1 100%
            text-align center
            +sm()
                flex 1 1 auto
            button
                &.btn-cancel
                    margin-right 50px
                +sm()
                   display block
                   &.btn-cancel
                       margin auto
                   &.btn-save
                       margin 10px auto 0

        .form-group + .form-group
            +sm()
                margin-top 0

        &.editing, &.adding
            .form-group > .form-item
                border-bottom none
                .form-label
                    display none
                .form-field
                    display flex
            .actions
                display block

        &.adding
            .actions
                button.btn-cancel
                    display none
